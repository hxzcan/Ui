<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TouchActivity">
    <com.maple.mobtest.touch.TouchViewGroup
            android:background="@color/colorAccent"
            android:id="@+id/vg"
            android:layout_width="match_parent"
            android:layout_height="200dp" android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">
        <com.maple.mobtest.touch.TouchView
                android:background="#fff0ff"
                android:id="@+id/view"
                android:layout_width="100dp" android:layout_height="100dp"/>
    </com.maple.mobtest.touch.TouchViewGroup>
    <LinearLayout
            android:layout_margin="16dp"
            android:layout_below="@+id/vg" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="设置函数返回值"
                  android:layout_gravity="center"/>


        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ViewGroup"
                  android:layout_gravity="start"/>

        <android.support.v7.widget.SwitchCompat android:id="@+id/rb_viewGroup_onInterceptTouchEvent"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="onInterceptTouchEvent"
                                                android:layout_gravity="end"/>
        <android.support.v7.widget.SwitchCompat android:id="@+id/rb_viewGroup_onTouchEvent"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="onTouchEvent"
                                                android:layout_gravity="end"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="View"
                  android:layout_gravity="start"/>

        <android.support.v7.widget.SwitchCompat android:id="@+id/rb_view_onTouchEvent"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="onTouchEvent"
                                                android:layout_gravity="end"/>
    </LinearLayout>
</RelativeLayout>